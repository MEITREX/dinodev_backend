type GlobalUser {
    id: UUID!
    username: String!
    avatar: String
    roles: [GlobalUserRole!]!

    userInProject(projectId: UUID!): UserInProject
    userInProjects: [UserInProject!]! @OnDemand
}

interface GlobalUserDependent {
    userId: UUID!
    user: GlobalUser! @OnDemand
}

input CreateGlobalUserInput {
    username: String!
    avatar: String
}

input UpdateGlobalUserInput {
    username: String!
    avatar: String
}



